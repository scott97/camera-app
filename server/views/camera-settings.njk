{% extends "skeleton.njk" %}
{% import "ui.njk" as ui %}

{% block scripts %}
<script src="javascripts/camera-settings.js"></script>
{% endblock %}

{% block title %}Camera Settings{% endblock %}

{% block tabs %}
{{ ui.tabs(camera=true) }}
{% endblock %}

{% block body %}
<h1 class="title">Camera Settings</h1>
<div class="columns">

    <div class="column is-4">
        <figure class="image is-4by3">
            <img src="https://bulma.io/images/placeholders/256x256.png">
        </figure>
        <h2 class="subtitle has-text-centered">Preview</h2>
    </div>

    <form class="column is-2">
        {{ ui.SelectInput('Camera Orientation', 'cameraOrientation', ['Normal','Inverted']) }}
    </form>

</div>
{% endblock %}

{% block footer %}
{{ ui.ApplyResetButtons() }}
{% endblock %}