{% extends "skeleton.njk" %}
{% import "ui.njk" as ui %}

{% block scripts %}
<script src="javascripts/camera-settings.js"></script>
{% endblock %}

{% block title %}Camera Settings{% endblock %}

{% block tabs %}
{{ ui.tabs(camera=true) }}
{% endblock %}

{% block body %}
<h1 class="title">Camera Settings</h1>
<div class="columns">
    <div class="column is-4">
        <figure class="image is-4by3">
            <img src="https://bulma.io/images/placeholders/256x256.png">
        </figure>
        <h2 class="subtitle has-text-centered">Preview</h2>
    </div>

    <div class="column is-4">
        {{ ui.Slider(       'Sharpness',      'sharpness', -100, 100, 10) }}
        {{ ui.Slider(        'Contrast',       'contrast', -100, 100, 10) }}
        {{ ui.Slider(      'Brightness',     'brightness',    0, 100, 5 ) }}
        {{ ui.Slider(      'Saturation',     'saturation', -100, 100, 10) }}
        {{ ui.Slider(             'ISO',            'iso',  100, 800, 50) }}
        {{ ui.Slider( 'EV Compensation', 'evCompensation',  -10,  10, 1 ) }}
    </div>

    <form class="column is-4">
        {{ ui.SelectInput('Camera Orientation', 'cameraOrientation', ['Normal','Inverted']) }}
        {{ ui.SelectInput('Exposure Mode', 'exposureMode', ['Auto','Night', 'Night Preview', 'Backlight', 'Spotlight', 'Sports', 'Snow', 'Beach', 'Very Long', 'Fixed FPS', 'Anti-shake', 'Fireworks' ]) }}
        {{ ui.SelectInput('AWB (Auto White Balance)', 'exposureMode', [ 'Off', 'Auto', 'Sun', 'Cloud', 'Shade', 'Tungsten', 'Fluorescent', 'Incandescent', 'Flash', 'Horizon']) }}
        {{ ui.SelectInput('Metering', 'metering', ['Average', 'Spot', 'Backlit', 'Matrix']) }}

    </form>

</div>
{% endblock %}

{% block footer %}
{{ ui.ApplyResetButtons() }}
{% endblock %}