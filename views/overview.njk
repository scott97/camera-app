{% extends "skeleton.njk" %}
{% import "ui.njk" as ui %}

{% block scripts %}
<script>window.onload = overviewOnLoad();</script>
{% endblock %}

{% block title %}Overview{% endblock %}

{% block tabs %}
{{ ui.tabs(overview=true) }}
{% endblock %}

{% block body %}
<h1 class="title">Overview</h1>

<form onsubmit="overviewOnClick();">
    {{ ui.TextInput('Camera Name', 'cameraName') }}
    {{ ui.Switch('Capture', 'capture') }}
</form>

{% endblock %}

{% block footer %}
{{ ui.ApplyResetButtons() }}
{% endblock %}