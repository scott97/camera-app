{% macro tabs(overview=false, pictures=false, camera=false, sensor=false, advanced=false) %}

<div class="tabs">
    <ul>
        <li {{ "class=is-active" if overview}}>
            <a href="./overview">Overview</a>
        </li>

        <li {{ "class=is-active" if pictures}}>
            <a href="./download-pictures">Download Pictures</a>
        </li>

        <li {{ "class=is-active" if camera}}>
            <a href="./camera-settings">Camera Settings</a>
        </li>

        <li {{ "class=is-active" if sensor}}>
            <a href="./sensor-settings">Sensor Settings</a>
        </li>

        <li {{ "class=is-active" if advanced}}>
            <a href="./advanced-settings">Advanced Settings</a>
        </li> 
    </ul>
</div>

{% endmacro %}


{% macro ApplyResetButtons() %}
<footer class="section footer is-small">
    <div class="container">
        <div class="field is-grouped">
            <div class="control">
                <input type="submit" onclick="document.forms[0].onsubmit();" class="button is-link" value="Apply Changes">
            </div>
            <div class="control">
                <button class="button is-text">Reset to Default</button>
            </div>
        </div>
    </div>
</footer>

{% endmacro %}

{# FORM CONTROLS #}
{% macro TextInput(label, name) %}
<div class="field">
    <label class="label">{{label}}</label>
    <div class="control">
        <input class="input" type="text" placeholder="{{label}}" name="{{name}}">
    </div>
</div>
{% endmacro %}

{% macro SelectInput(label, name, options) %}
<div class="field">
    <label class="label">{{label}}</label>
    <div class="control">
        <div class="select">
            <select name="{{name}}">
                {% for option in options %}
                <option>{{option}}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>
{% endmacro %}

{% macro Switch(label, name) %}
<div class="field">
    <label class="label">{{label}}</label>
    <input id="{{name}}" type="checkbox" name="{{name}}" class="switch is-rounded is-info" checked="checked">
    <label for="{{name}}">On</label>
</div>
{% endmacro %}